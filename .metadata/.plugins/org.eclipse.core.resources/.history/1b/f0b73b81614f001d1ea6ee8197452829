#include <stdio.h>
#include <stdlib.h>

#define TAM_ARRAY 10

int contadorPositivos(int buffer,int contadorPositivos, int arrayNumero) {


	for (int i = 0; i < TAM_ARRAY; i++) {
			arrayNumero[i] = buffer;
			if (buffer > -1) {
				contadorPositivos++;
			}
		}
		return contadorPositivos;
}

int contadorNegativos(int buffer,int contadorNegativos, int arrayNumero){

	for(int i = 0; i < TAM_ARRAY; i++){
		arrayNumero[i] = buffer;
		if(buffer < -1){
			contadorNegativos++;
		}
	}


	return contadorNegativos;
}
